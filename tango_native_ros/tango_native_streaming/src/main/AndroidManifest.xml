<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.uml.tango.tangonativeros.tangonativestreaming"
    android:versionCode="0"
    android:versionName="0">
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23"
    />

    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    <uses-feature android:name="android.hardware.camera" android:maxSdkVersion="22" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:maxSdkVersion="22" />
    <uses-feature android:name="android.hardware.camera2" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library
            android:name="com.projecttango.libtango_device2"
            android:required="true" />
        <activity
            android:label="@string/app_name_long"
            android:name=".NativeStreamingActivity"
            android:screenOrientation="nosensor"
            android:noHistory="false"
            android:parentActivityName=".SettingsActivity"
            android:configChanges="uiMode">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
                <data android:name="android.content.Intent.FLAG_ACTIVITY_NO_ANIMATION" />
            </intent-filter>
        </activity>
        <activity
            android:label="Tango Native ROS settings"
            android:name=".SettingsActivity"
            android:screenOrientation="nosensor"
            android:noHistory="false"
            android:finishOnTaskLaunch="true"
            android:configChanges="uiMode">
            <intent-filter android:label="Tango Native ROS Settings">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data android:name="android.content.Intent.FLAG_ACTIVITY_NO_ANIMATION" />
            </intent-filter>
        </activity>
    </application>

</manifest>
